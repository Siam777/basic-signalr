@page
<div style="width: 100%">
    <div style="display: flex; flex-direction:column; justify-content:center; gap: 10px; width: 300px; margin: auto">
        <div>
            <input type="button" id="joinGroup" value="Join Private Group"/>
        </div>
        <textarea name="message" id="message" style="width: 100%"></textarea>
        <select id="group" style="width: 100%">
            <option value="All">Everyone</option>
            <option value="Myself">Myself</option>            
            <option value="PrivateGroup">Private Group</option>
        </select>
        <input type="button" id="sendButton" value="Send Message" />

        <div style="width: 100%" id="messages"></div>
    </div>
</div>



<script src="~/lib/signalr.js"></script>
<script src="~/js/message.js"></script>